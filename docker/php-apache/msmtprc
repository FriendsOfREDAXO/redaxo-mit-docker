# system wide configuration
# https://marlam.de/msmtp/msmtp.html#A-system-wide-configuration-file

# define default account
# see https://marlam.de/msmtp/msmtp.html#General-commands
account default

# define host and port
host mailhog
port 1025

# disable TLS since we do local testing only
# see https://marlam.de/msmtp/msmtp.html#TLS-commands
tls off

# Enable envelope-from addresses (here: root@localhost)
# see https://marlam.de/msmtp/msmtp.html#Options-specific-to-sendmail-mode
auto_from on
maildomain localhost
